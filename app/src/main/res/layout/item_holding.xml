<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_name"
        style="@style/title_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ashokeley" />

    <TextView
        android:id="@+id/text_view_label_ltp"
        style="@style/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/ltp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_ltp_value"
        app:layout_constraintEnd_toStartOf="@+id/text_view_ltp_value"
        app:layout_constraintTop_toTopOf="@+id/text_view_ltp_value" />

    <TextView
        android:id="@+id/text_view_ltp_value"
        style="@style/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9.95" />


    <TextView
        android:id="@+id/text_view_label_net_qty"
        style="@style/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/net_qty"
        app:layout_constraintStart_toStartOf="@+id/text_view_name"
        app:layout_constraintTop_toBottomOf="@+id/text_view_name" />

    <TextView
        android:id="@+id/text_view_net_qty"
        style="@style/title_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_label_net_qty"
        app:layout_constraintStart_toEndOf="@+id/text_view_label_net_qty"
        app:layout_constraintTop_toTopOf="@+id/text_view_label_net_qty"
        tools:text="7" />

    <TextView
        android:id="@+id/text_view_label_pl"
        style="@style/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/p_amp_l"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_pl"
        app:layout_constraintEnd_toStartOf="@+id/text_view_pl"
        app:layout_constraintTop_toTopOf="@+id/text_view_pl" />

    <TextView
        android:id="@+id/text_view_pl"
        style="@style/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9.95" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_seperator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_label_net_qty" />


</androidx.constraintlayout.widget.ConstraintLayout>